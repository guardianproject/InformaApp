	<style name="GallerySpinnerStyle" parent="@android:style/Widget.Holo.Light.Spinner.DropDown.ActionBar">
    	<item name="android:background">@null</item>
    	<item name="android:textColor">@android:color/white</item>
	</style>
 -->
	<style name="GalleryFilterButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">	    
	</style>
	
	<style name="PopupInfoStyle">
	    <item name="android:background">@drawable/popup_info_background</item>
	    <item name="android:textColor">@android:color/white</item> 
	</style>
	
	<style name="RecordButtonStyle">
	    <item name="android:background">@drawable/record_button_background</item>
	    <item name="android:textColor">@android:color/white</item> 
	</style>
	
	<style name="BlueRoundedButton">
        <item name="android:background">@drawable/blue_rounded_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:minHeight">48dip</item>
    </style>
    
	<style name="Theme.Transparent" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
 	    <item name="android:windowContentOverlay">@null</item>
 	    <item name="android:windowNoTitle">true</item>
 	    <item name="android:backgroundDimEnabled">false</item>
	</style>
</resources>