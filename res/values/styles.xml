<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="iwitness_tab_holder">
        <item name="android:background">@drawable/eyewitness_blue</item>
    </style>
    
    <style name="iwitness_sub_tab_holder">
        <item name="android:background">@drawable/white</item>
    </style>
    
    <style name="iwitness_camera_chooser_button">
        <item name="android:background">@drawable/black</item>
    </style>
    
    <style name="iWitness_button_a">
        <item name="android:textColor">@drawable/peuter</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="iwitness_h1">
        <item name="android:textColor">@drawable/white</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="iwitness_h2">
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="iwitness_h3">
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="iwitness_p">
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="iWitness_list">
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>
    
    <style name="iwitness_edittext">
        <item name="android:background">@drawable/extras_button_d_background_inactive</item>
        <item name="android:padding">8dip</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="button_a">
        <item name="android:background">@drawable/extras_button_a_selector</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="button_b">
        <item name="android:background">@drawable/black</item>
        <item name="android:textColor">@drawable/white</item>
    </style>
    
    <style name="button_c">
        <item name="android:background">@drawable/extras_button_c_selector</item>
        <item name="android:textColor">@drawable/trans_grey_1</item>
    </style>
    
    <style name="button_d">
        <item name="android:background">@drawable/extras_button_d_selector</item>
        <item name="android:textColor">@drawable/black</item>
    </style>
    
    <style name="button_e">
        <item name="android:background">@drawable/extras_button_a_selector</item>
        <item name="android:padding">5dip</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="button_f">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@drawable/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>